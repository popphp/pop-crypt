        "crypt",
        "bcrypt",
        "encryption",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-crypt",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
